
public class Reader extends Thread {
	public Reader(String name){
		super(name);
	}
	
	public void run(){
		ReaderWriter test = new ReaderWriter();
		int i = 0;
		while(true){
			try {
				i++;
				test.read();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

		}
	}
}