package syncj;

public class ErrorTreatment extends CounterException{

	public void checkIdent(String expr) throws CounterException{
		if(expr.contains("_att")){
			System.err.println("Not allowed to use <name>_att : rename variable");
			new CounterException();
		}
		
		if(expr.contains("_act")){
			System.err.println("Not allowed to use <name>_act : rename variable");
			new CounterException();
		}
		
		if(expr.contains("_term")){
			System.err.println("Not allowed to use <name>_term : rename variable");
			new CounterException();
		}
		
		
	}
}
